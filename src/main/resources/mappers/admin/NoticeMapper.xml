<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.demo.admin.notice.NoticeMapper">

    <!-- 테이블 전체 컬럼 -->
    <sql id="postColumns">
        id
        , title
        , writer
        , content
        , ord
        , delete_yn
        , start_date
        , end_date
    </sql>

    <!-- 저장 -->
    <insert id="save" parameterType="com.example.demo.admin.notice.NoticeRequest" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO notice (
            <include refid="postColumns" />
        ) VALUES (
            #{id}
            , #{title}
            , #{writer}
            , #{content}
            , #{ord}
            , 0
            , #{startDate}
            , #{endDate}
        )
    </insert>

    <!-- 수정 -->
    <update id="update" parameterType="com.example.demo.admin.notice.NoticeRequest">
        UPDATE
            notice
        SET
            title = #{title}
            , writer = #{writer}
            , content = #{content}
            , ord = #{ord}
            , delete_yn = #{deleteYn}
            , start_date = #{startDate}
            , end_date = #{endDate}
        WHERE
            id = #{id}
    </update>

    <!-- 삭제 -->
    <delete id="deleteById" parameterType="long">
        UPDATE
            notice
        SET
            delete_yn = 1
        WHERE
            id = #{id}
    </delete>

    <!-- 상세정보 조회 -->
    <select id="findById" parameterType="long" resultType="com.example.demo.admin.notice.NoticeResponse">
        SELECT
            <include refid="postColumns" />
        FROM
            notice
        WHERE
            id = #{value}
    </select>

    <!-- 리스트 조회 -->
    <select id="findAll" parameterType="com.example.demo.base.paging.SearchDto" resultType="com.example.demo.admin.notice.NoticeResponse">
        SELECT
            <include refid="postColumns" />
        FROM
            notice
        WHERE
            1=1
            <include refid="search" />
        ORDER BY FIELD
            (ord, 1,2,3,4,5,6,7,8,9,0), id DESC
        LIMIT
            #{pagination.limitStart}, #{recordSize}
    </select>

    <select id="findAllFront" parameterType="com.example.demo.base.paging.SearchDto" resultType="com.example.demo.admin.notice.NoticeResponse">
        SELECT
            <include refid="postColumns" />
        FROM
            notice
        WHERE
            delete_yn = 0
            <include refid="search" />
        ORDER BY FIELD
            (ord, 1,2,3,4,5,6,7,8,9,0), id DESC
        LIMIT
            #{pagination.limitStart}, #{recordSize}
    </select>

    <!-- 게시글 수 카운팅 -->
    <select id="count" parameterType="com.example.demo.base.paging.SearchDto" resultType="int">
        SELECT
            COUNT(*)
        FROM
            notice
        WHERE
            1=1
            <include refid="search" />
    </select>

    <select id="countFront" parameterType="com.example.demo.base.paging.SearchDto" resultType="int">
        SELECT
            COUNT(*)
        FROM
            notice
        WHERE
            delete_yn = 0
            <include refid="search" />
    </select>

    <!-- 게시글 검색 -->
    <sql id="search">
        <!-- 검색 키워드가 있을 때 -->
        <if test="keyword != null and keyword != ''">
            <choose>
                <!-- 검색 유형이 있을 때 -->
                <when test="searchType != null and searchType != ''">
                    <choose>
                        <when test="'title'.equals( searchType )">
                            AND title LIKE CONCAT('%', #{keyword}, '%')
                        </when>
                        <when test="'content'.equals( searchType )">
                            AND content LIKE CONCAT('%', #{keyword}, '%')
                        </when>
                        <when test="'writer'.equals( searchType )">
                            AND writer LIKE CONCAT('%', #{keyword}, '%')
                        </when>
                    </choose>
                </when>

                <!-- 전체 검색일 때 -->
                <otherwise>
                    AND (
                        title LIKE CONCAT('%', #{keyword}, '%')
                        OR content LIKE CONCAT('%', #{keyword}, '%')
                        OR writer LIKE CONCAT('%', #{keyword}, '%')
                    )
                </otherwise>
            </choose>
        </if>
    </sql>
</mapper>