<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.demo.admin.reservation.ReservationMapper">

    <!-- rs_schedule 테이블 전체 컬럼 -->
    <sql id="scheduleColumns">
        id
        ,title
        ,status
        ,delete_yn
        ,start_date
        ,ord
    </sql>

    <!-- 리스트 조회 -->
    <select id="findAll" resultType="com.example.demo.admin.reservation.ReservationResponse">
        SELECT
            <include refid="scheduleColumns" />
        FROM
            rs_schedule
        WHERE
            delete_yn = 0
        ORDER BY
            ord
    </select>

    <!-- 저장 -->
    <insert id="save" parameterType="com.example.demo.admin.reservation.ReservationDto" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO rs_schedule (
        <include refid="scheduleColumns" />
        ) VALUES (
        #{id}
        , #{title}
        , #{status}
        , 0
        , #{startDate}
        , #{ord}
        )
    </insert>

</mapper>