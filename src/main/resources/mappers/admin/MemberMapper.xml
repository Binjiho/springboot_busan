<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.demo.admin.member.MemberMapper">

    <!-- 테이블 전체 컬럼 -->
    <sql id="postColumns">
        id
        , user_id
        , user_pw
        , name
        , email
        , htel
        , address
        , grade
        , delete_yn
        , created_date
        , modified_date
    </sql>

    <!-- 저장 -->
    <insert id="save" parameterType="com.example.demo.admin.member.MemberRequest" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO member (
            <include refid="postColumns" />
        ) VALUES (
            #{id}
            , #{userId}
            , #{userPw}
            , #{name}
            , #{email}
            , #{htel}
            , #{address}
            , 1
            , 0
            , NOW()
        )
    </insert>

    <!-- 수정 -->
    <update id="update" parameterType="com.example.demo.admin.member.MemberRequest">
        UPDATE
            member
        SET
            modified_date = NOW()
            , name = #{name}
            <if test="password != null and password != ''">
                ,user_pw = #{userPw}
            </if>
        WHERE
            id = #{id}
    </update>

    <!-- 삭제 -->
    <delete id="deleteById" parameterType="long">
        UPDATE
            member
        SET
            delete_yn = 1
        WHERE
            id = #{id}
    </delete>

    <!-- 상세정보 조회 -->
    <select id="findByLoginId" parameterType="string" resultType="com.example.demo.admin.member.MemberResponse">
        SELECT
            <include refid="postColumns" />
        FROM
            member
        WHERE
            delete_yn = 0
            AND user_id = #{value}
    </select>

    <!-- ID 중복 체크 -->
    <select id="countBySignUpId" parameterType="string" resultType="int">
        SELECT
            count(*)
        FROM
            member
        WHERE
            user_id = #{value}
    </select>
</mapper>